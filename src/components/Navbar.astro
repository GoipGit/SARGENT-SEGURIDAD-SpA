<nav class="navbar">
	<div class="container">
		<a href="/" class="brand" aria-label="Inicio" data-astro-prefetch>
			Security<span class="text-gradient">Central</span>
		</a>
		<ul class="nav-links">
			<li>
				<a
					href="/"
					class="nav-link-home"
					aria-current="page"
					data-astro-prefetch>Inicio</a
				>
			</li>
			<li><a href="/#servicios" data-astro-prefetch>Servicios</a></li>
			<li><a href="/#soluciones" data-astro-prefetch>Soluciones</a></li>
			<li class="nav-separator"></li>
			<li>
				<a
					href="/productos"
					id="nav-products"
					class="highlight-link"
					data-astro-prefetch>Productos</a
				>
			</li>
		</ul>
		<a href="/#contacto" class="btn-primary" data-astro-prefetch
			>Cotizar Ahora</a
		>
	</div>
</nav>

<script>
	document.addEventListener("astro:page-load", () => {
		if (sessionStorage.getItem("scrollToTop")) {
			window.scrollTo({ top: 0, left: 0, behavior: "instant" });
			sessionStorage.removeItem("scrollToTop");
		}

		const scrollToTop = (e: Event) => {
			if (window.location.pathname === "/") {
				e.preventDefault();
				window.scrollTo({
					top: 0,
					left: 0,
					behavior: "smooth",
				});
				if (window.location.hash) {
					history.pushState(null, "", window.location.pathname);
				}
			} else {
				sessionStorage.setItem("scrollToTop", "true");
			}
		};

		const brandLink = document.querySelector(".brand");
		const homeLink = document.querySelector(".nav-link-home");
		const navLinks = document.querySelectorAll(".nav-links a");

		if (brandLink) brandLink.addEventListener("click", scrollToTop);
		if (homeLink) homeLink.addEventListener("click", scrollToTop);

		// Active State Logic (ScrollSpy)
		const updateActiveState = () => {
			const currentPath = window.location.pathname;

			// Remove active class from all
			navLinks.forEach((link) => link.classList.remove("active"));

			if (currentPath.startsWith("/productos")) {
				const productsLink = document.getElementById("nav-products");
				if (productsLink) productsLink.classList.add("active");
				return;
			}

			if (currentPath === "/") {
				const sections = ["inicio", "servicios", "soluciones"];
				let currentSection = "";

				// Determine which section is currently in view
				for (const section of sections) {
					const element = document.getElementById(section);
					if (element) {
						const rect = element.getBoundingClientRect();
						// Check if section is active (simple heuristic)
						if (rect.top <= 150 && rect.bottom >= 150) {
							currentSection = section;
							break;
						}
					}
				}

				// Fallback to home if near top
				if (!currentSection && window.scrollY < 100) {
					currentSection = "inicio";
				}

				if (currentSection) {
					navLinks.forEach((link) => {
						const href = link.getAttribute("href");
						if (
							href === `/#${currentSection}` ||
							(currentSection === "inicio" && href === "/")
						) {
							link.classList.add("active");
						}
					});
				}
			}
		};

		// Run on load and scroll
		updateActiveState();
		document.addEventListener("scroll", updateActiveState, {
			passive: true,
		});
	});
</script>

