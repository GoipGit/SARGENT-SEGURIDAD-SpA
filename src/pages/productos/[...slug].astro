---
import Layout from "../../layouts/Layout.astro";
import { getCollection, type CollectionEntry } from "astro:content";

export async function getStaticPaths() {
    const products = await getCollection("products");
    return products.map((product: CollectionEntry<"products">) => ({
        params: { slug: product.slug },
        props: { product },
    }));
}
const products = await getCollection("products");

interface Props {
    product: CollectionEntry<"products">;
}

const { product } = Astro.props;
const { Content } = await product.render();
---

<Layout>
    <div class="product-detail">
        <div class="container">
            <a href="/productos" class="back-link">← Volver al Catálogo</a>

            <div class="product-grid">
                <div class="image-section">
                    <div class="image-wrapper">
                        <img
                            src={product.data.image}
                            alt={product.data.title}
                        />
                        <span class="category-badge"
                            >{product.data.category}</span
                        >
                    </div>
                </div>

                <div class="info-section">
                    <h1>{product.data.title}</h1>

                    <div class="description-lead">
                        {product.data.description}
                    </div>

                    {
                        product.data.features && (
                            <div class="features-block">
                                <h3>Características Clave</h3>
                                <ul>
                                    {product.data.features.map(
                                        (feature: string) => (
                                            <li>
                                                <span class="check">✓</span>
                                                {feature}
                                            </li>
                                        ),
                                    )}
                                </ul>
                            </div>
                        )
                    }

                    <div class="cta-block">
                        <a href="#contacto" class="btn-primary"
                            >Cotizar este Servicio</a
                        >
                        <span class="stock-status">
                            <span class="dot"></span> Disponible
                        </span>
                    </div>
                </div>
            </div>

            <div class="content-section">
                <div class="prose">
                    <Content />
                </div>
            </div>
        </div>
    </div>
</Layout>

<style>
    .product-detail {
        padding-top: 120px;
        padding-bottom: 80px;
        background: var(--color-bg);
        min-height: 100vh;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    .back-link {
        color: var(--color-text-muted);
        text-decoration: none;
        font-size: 0.9rem;
        display: inline-block;
        margin-bottom: 2rem;
        transition: color 0.2s;
    }

    .back-link:hover {
        color: var(--color-primary);
    }

    .product-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 4rem;
        margin-bottom: 4rem;
    }

    .image-wrapper {
        position: relative;
        border-radius: 16px;
        overflow: hidden;
        border: 1px solid var(--color-border);
    }

    .image-wrapper img {
        width: 100%;
        height: auto;
        display: block;
    }

    .category-badge {
        position: absolute;
        top: 1.5rem;
        left: 1.5rem;
        background: rgba(0, 0, 0, 0.8);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-size: 0.8rem;
        border: 1px solid var(--color-border);
        backdrop-filter: blur(4px);
    }

    h1 {
        font-size: 3rem;
        margin-bottom: 1.5rem;
        line-height: 1.1;
    }

    .price-block {
        margin-bottom: 2rem;
        padding-bottom: 2rem;
        border-bottom: 1px solid var(--color-border);
    }

    .price-block .label {
        display: block;
        font-size: 0.9rem;
        color: var(--color-text-dim);
        margin-bottom: 0.25rem;
    }

    .price-block .amount {
        font-size: 2.5rem;
        color: var(--color-primary);
        font-weight: 700;
    }

    .description-lead {
        font-size: 1.2rem;
        color: var(--color-text-muted);
        line-height: 1.6;
        margin-bottom: 2rem;
    }

    .features-block {
        background: var(--color-surface-1);
        padding: 2rem;
        border-radius: 12px;
        border: 1px solid var(--color-border);
        margin-bottom: 2rem;
    }

    .features-block h3 {
        font-size: 1.1rem;
        margin-bottom: 1rem;
        color: var(--color-text);
    }

    .features-block ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .features-block li {
        margin-bottom: 0.75rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        color: var(--color-text-muted);
    }

    .features-block .check {
        color: var(--color-primary);
        font-weight: bold;
    }

    .cta-block {
        display: flex;
        align-items: center;
        gap: 1.5rem;
    }

    .btn-primary {
        background: var(--color-primary);
        color: #000;
        padding: 1rem 2rem;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 700;
        font-size: 1.1rem;
        transition: all 0.2s;
    }

    .btn-primary:hover {
        background: var(--color-primary-light);
        transform: translateY(-2px);
    }

    .stock-status {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--color-success);
        font-size: 0.9rem;
        font-weight: 600;
    }

    .dot {
        width: 8px;
        height: 8px;
        background: var(--color-success);
        border-radius: 50%;
    }

    .content-section {
        max-width: 800px;
        margin: 0 auto;
        border-top: 1px solid var(--color-border);
        padding-top: 4rem;
    }

    /* Typography for Markdown Content */
    .prose :global(h2) {
        font-size: 2rem;
        margin-top: 3rem;
        margin-bottom: 1.5rem;
        color: var(--color-text);
    }

    .prose :global(h3) {
        font-size: 1.5rem;
        margin-top: 2rem;
        margin-bottom: 1rem;
        color: var(--color-text);
    }

    .prose :global(p) {
        font-size: 1.1rem;
        line-height: 1.8;
        color: var(--color-text-muted);
        margin-bottom: 1.5rem;
    }

    .prose :global(ul),
    .prose :global(ol) {
        margin-bottom: 1.5rem;
        padding-left: 1.5rem;
        color: var(--color-text-muted);
    }

    .prose :global(li) {
        margin-bottom: 0.5rem;
        line-height: 1.6;
    }

    @media (max-width: 968px) {
        .product-grid {
            grid-template-columns: 1fr;
            gap: 2rem;
        }
    }
</style>
