---
import Layout from "../../layouts/Layout.astro";
import { getCollection, type CollectionEntry } from "astro:content";

const products = await getCollection("products");
type Product = CollectionEntry<"products">;
---

<Layout>
    <section class="products-page">
        <div class="container">
            <div class="header">
                <span class="badge">Nuestro Catálogo</span>
                <h1>
                    Tecnología de <span class="text-gradient"
                        >Seguridad Avanzada</span
                    >
                </h1>
                <p>
                    Explore nuestra gama de tecnologías diseñadas para proteger
                    lo que más importa.
                </p>
            </div>

            <div class="grid">
                {
                    products.map((product: Product) => (
                        <article class="card">
                            <div class="image-container">
                                <img
                                    src={product.data.image}
                                    alt={product.data.title}
                                />
                                <div class="category-tag">
                                    {product.data.category}
                                </div>
                            </div>
                            <div class="content">
                                <h3>{product.data.title}</h3>
                                <p class="description">
                                    {product.data.description}
                                </p>

                                {product.data.features && (
                                    <ul class="features">
                                        {product.data.features
                                            .slice(0, 3)
                                            .map((feature: string) => (
                                                <li>• {feature}</li>
                                            ))}
                                    </ul>
                                )}

                                <div class="footer">
                                    <div class="price">
                                        <span>Desde</span>
                                        <strong>
                                            $
                                            {product.data.price.toLocaleString(
                                                "es-CL",
                                            )}
                                        </strong>
                                    </div>
                                    <a
                                        href={`/productos/${product.slug}`}
                                        class="btn-primary"
                                    >
                                        Ver Detalles
                                    </a>
                                </div>
                            </div>
                        </article>
                    ))
                }
            </div>
        </div>
    </section>
</Layout>

<style>
    .products-page {
        padding: 120px 0 80px;
        background: var(--color-bg);
        min-height: 100vh;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    .header {
        text-align: center;
        max-width: 700px;
        margin: 0 auto 5rem;
    }

    .badge {
        display: inline-block;
        padding: 0.5rem 1rem;
        border: 1px solid var(--color-primary-border);
        background: var(--color-primary-subtle);
        border-radius: 50px;
        color: var(--color-primary);
        font-size: 0.875rem;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    h1 {
        font-size: 3.5rem;
        margin-bottom: 1.5rem;
        line-height: 1.1;
    }

    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 2.5rem;
    }

    .card {
        background: var(--color-surface-1);
        border: 1px solid var(--color-border);
        border-radius: 16px;
        overflow: hidden;
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
    }

    .card:hover {
        transform: translateY(-5px);
        border-color: var(--color-primary-light);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    }

    .image-container {
        height: 200px;
        position: relative;
        overflow: hidden;
    }

    .image-container img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .card:hover .image-container img {
        transform: scale(1.05);
    }

    .category-tag {
        position: absolute;
        top: 1rem;
        right: 1rem;
        background: rgba(0, 0, 0, 0.8);
        color: white;
        padding: 0.25rem 0.75rem;
        border-radius: 4px;
        font-size: 0.75rem;
        font-weight: 600;
        backdrop-filter: blur(4px);
        border: 1px solid var(--color-border);
    }

    .content {
        padding: 2rem;
        display: flex;
        flex-direction: column;
        flex-grow: 1;
    }

    h3 {
        font-size: 1.5rem;
        margin-bottom: 0.75rem;
        color: var(--color-text);
    }

    .description {
        color: var(--color-text-muted);
        font-size: 0.95rem;
        margin-bottom: 1.5rem;
        line-height: 1.6;
    }

    .features {
        list-style: none;
        padding: 0;
        margin: 0 0 2rem;
        color: var(--color-text-dim);
        font-size: 0.9rem;
    }

    .features li {
        margin-bottom: 0.25rem;
    }

    .footer {
        margin-top: auto;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding-top: 1.5rem;
        border-top: 1px solid var(--color-border);
    }

    .price {
        display: flex;
        flex-direction: column;
    }

    .price span {
        font-size: 0.75rem;
        color: var(--color-text-dim);
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .price strong {
        color: var(--color-primary);
        font-size: 1.25rem;
    }

    .btn-primary {
        background: var(--color-primary);
        color: #000;
        padding: 0.75rem 1.25rem;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 600;
        font-size: 0.9rem;
        transition: all 0.2s ease;
    }

    .btn-primary:hover {
        background: var(--color-primary-light);
        transform: translateY(-2px);
    }

    @media (max-width: 768px) {
        h1 {
            font-size: 2.5rem;
        }
    }
</style>
